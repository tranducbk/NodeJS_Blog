    <div class="mt-4">
        <h3>Cập nhật khóa học</h3>
        <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
                      
            <div class='form-group'>
                    <label for='name'>Tên khóa học</label>
                    <input class='form-control input-custom' value="{{course.name}}" name='name' />
                </div>
                <div class='form-group'>
                    <label for='description'>Mô tả</label>
                    <textarea class='form-control input-custom' name='description'>{{course.description}}</textarea>
                </div>
                <div class='form-group'>
                    <label for='videoId'>Video ID</label>
                    <input class='form-control input-custom' value="{{course.videoId}}" name='videoId' />
                </div>
                <div class='form-group'>
                    <label for='level'>Trình độ</label>
                    <input class='form-control input-custom' value="{{course.level}}" name='level' />
                </div>

            <button type="submit" class="btn btn-primary">Chỉnh sửa khóa học</button>
        </form>
    </div>